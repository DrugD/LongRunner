/* pages/one/detail.wxss */
@import "../../../wxParse/wxParse.wxss";

.view_2 {
  height: 230rpx;
  display: flex;
  flex-direction: row;
  box-shadow: 0px 5px 10px 1px rgba(194, 194, 194, 0.705);
}

.view_item {
  width: 33.33%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.view_item1 {
  height: 50%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view_item2 {
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view_item3 {
  height: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 27rpx;
}

.projects_item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  align-items: center;
  box-shadow: 0px -1px 2px 0px rgba(194, 194, 194, 0.253);
}

.projects_item1 {
  width: 50%;
  text-align: left;
  margin-left: 30rpx;
}

.projects_item2 {
  width: 20%;
  text-align: left;
}

.projects_item3{
  width: 30%;
  text-align: left;
}


.wxfor_project {
  box-shadow: 0px 1px 10px 1px rgba(194, 194, 194, 0.705);
}

.boxshadow {
  height: 80rpx;
  box-shadow: 0px 1px 10px 1px rgba(194, 194, 194, 0.705);
  align-items: center;
  display: flex;
  justify-content: center;
}

.tag {
  width: 30%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
  background: #ff4848;
  border-radius: 30rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.malasong_introduce {
  width: 90%;
  margin: auto;
  margin-top: 100rpx;
  word-break: break-all;
}

.malasong_rules {
  width: 90%;
  margin: auto;
  margin-top: 30rpx;
  word-break: break-all;
  margin-top: -70rpx;
}

.add-wrap {
  position: fixed;
  bottom: 2vh;
  left:83vw;
  transition: all 0.2s ease-in-out;
  z-index: 9999;
  box-shadow: -5px -5px 20px rgb(255, 255, 255), 5px 5px 20px #819cff;
  border-radius: 100%;
  width: 85rpx;
  height: 85rpx;
  background: white;
}

.add-wrap:active{

  box-shadow: -2px -2px 5px rgb(255, 255, 255), 2px 2px 5px #819cff;
}

.add-wrap image {
  width: 100%;
  height: 100%;
}
