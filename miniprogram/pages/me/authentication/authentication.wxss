  height: 30rpx;
  justify-content: flex-end;


}

.row_line {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.column_line {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.text {
  text-align: center;
  font-size: 40rpx;
  color: #babecc;
  text-shadow: 1px 1px 1px #fff;
}

.text_big {
  text-align: center;
  font-size: 45rpx;
  color: #babecc;
  text-shadow: 1px 1px 1px #fff;
  padding-top: 30rpx;
}

.text_name {
  text-align: start;
  font-size: 40rpx;
  color: #babecc;
  text-shadow: 1px 1px 1px #fff;
}

.text_small {
  text-align: center;
  font-size: 30rpx;
  color: #babecc;
  text-shadow: 1px 1px 1px #fff;
}

.input_view {
  display: block;
  margin-bottom: calc(16*1.5)px;
  width: 100%;
}

.body .html {
  background-color: #ebecf0;
}

.body  .p .input .select .textarea .button {
  letter-spacing: -0.2px;
  font-size: 16px;
}

.div .p {
  color: #babecc;
  text-shadow: 1px 1px 1px #fff;
}

.form {
  padding: 16px;
  width: 320px;
  margin: 0 auto;
}

.segment {
  padding: 32px 0;
  text-align: center;
}

.button .input {
  border: 0;
  outline: 0;
  font-size: 16px;
  border-radius: 320px;
  padding: 16px;
  background-color: #ebecf0;
  text-shadow: 1px 1px 0 #fff;
}

.label {
  /* display: block; *//* margin-bottom: 24px; */
  width: 100%;
}

.input_text {
  text-align: center;
  font-size: 40rpx;
  color: #808080;
  text-shadow: 1px 1px 1px #fff;
  /* font-family:"微软雅黑"; */
}

.input_area_text {
  text-align: center;
  font-size: 35rpx;
  color: #808080;
  /* text-shadow: 1px 1px 1px #fff; */
}

.input_text_small {
  text-align: center;
  font-size: 35rpx;
  color: #808080;
  text-shadow: 1px 1px 1px #fff;
}

.input_area {
  margin-right: 8px;
  box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.2s ease-in-out;
  height: 80rpx;
  border-radius: 50rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
}

.input_area:hover {
  box-shadow: inset 1px 1px 2px #babecc, inset -1px -1px 2px #fff;
}

.input {
  margin-right: 8px;
  box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
  width: 100%;
  box-sizing: border-box;
  transition: all 0.2s ease-in-out;
  appearance: none;
  -webkit-appearance: none;
  height: 80rpx;
  border-radius: 50rpx;
}

.input:hover {
  box-shadow: inset 1px 1px 2px #babecc, inset -1px -1px 2px #fff;
}

.shadow {
  /* box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc; */
  box-shadow: inset 2px 2px 5px #babecc, inset -5px -5px 10px #fff;
}

.img_shadow {
  border-radius: 25rpx;
  box-shadow: inset 1px 1px 2px #babecc, inset -1px -1px 2px #fff;
}

.button {
  color: #61677c;
  font-weight: bold;
  box-shadow: -5px -5px 20px #fff, 5px 5px 20px #babecc;
  transition: all 0.2s ease-in-out;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 45rpx;
  /* letter-spacing:15px; *//* cursor: pointer; */
  border-radius: 25px;
}

.button:hover {
  box-shadow: -2px -2px 5px #fff, 2px 2px 5px #babecc;
}

.button:active {
  box-shadow: inset 1px 1px 2px #babecc, inset -1px -1px 2px #fff;
}

.button .icon {
  margin-right: 8px;
}

.button .unit {
  border-radius: 8px;
  line-height: 0;
  width: 48px;
  height: 48px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  margin: 0 8px;
  font-size: 19.2px;
}

.button .unit .icon {
  margin-right: 0;
}

.button.red {
  display: block;
  width: 100%;
  color: #ae1100;
}

.input-group {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.input-group label {
  margin: 0;
  flex: 1;
}

.img {
  width: 100%;
  height: 100%;
}


.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
  background: red;
}